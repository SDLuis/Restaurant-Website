---
import { images } from '../constants'

const { title } = Astro.props
---

<div style={{ marginBottom: '1rem' }}>
	<p class='text-white font-Cormorant font-bold tracking-[0.04em] capitalize leading-7 lg:leading-[67px] text-[19px] sm:text-2xl'>{title}</p>
	<p><img src={images.spoon} alt='spoon_image' class='spoon__img w-11 lg:w-20' /></p>
</div>