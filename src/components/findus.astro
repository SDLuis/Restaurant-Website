---
import SubHeading from '../components/subheading.astro'
import { images } from '../constants';
---

<div class='app__wrapper flex flex-col lg:flex-row justify-between items-center min-h-screen py-16 px-8 md:p-16 lg:py-16 lg:px-24' id='contact'>
	<div class='flex flex-1 justify-center items-start flex-col w-full'>
		<SubHeading title='Contact' />
		<h1 class='text-[45px] leading-[70px] sm:text-[64px] sm:leading-[83.2px] font-Cormorant text-golden-50 capitalize tracking-[0.04em]' style={{ marginBottom: '3rem' }}>Find Us</h1>
		<div class='app__wrapper-content'>
			<p class='leading-7 font-Opensans font-normal tracking-[0.04em] text-base capitalize my-8 text-selfgray-50'>Lane Ends Bungalow, Whatcroft Hall Lane, Rudheath, CW9 75G</p>
			<p class='font-Cormorant font-normal text-[32px] capitalize leading-[41.6px] tracking-[0.04em] text-golden-50' style={{ color: '#DCCA87', margin: '2rem 0' }}>Opening Hours</p>
			<p class='leading-7 font-Opensans font-normal tracking-[0.04em] text-base capitalize my-8 text-selfgray-50'>Mon - Fri: 10:00 am - 02:00 am</p>
			<p class='leading-7 font-Opensans font-normal tracking-[0.04em] text-base capitalize my-8 text-selfgray-50'>Sat - Sun: 10:00 am - 03:00 am</p>
		</div>
		<button type='button' class='bg-crimson-50 text-selfblack-50 font-Cormorant tracking-[0.04em] leading-7 rounded-[1px] border-none cursor-pointer outline-none py-2 px-6 font-bold text-base lg:text-lg' style={{ marginTop: '2rem' }}>Visit Us</button>
	</div>

	<div class='app__wrapper_img flex flex-1 w-full justify-center items-center ml-8'>
		<img class='w-full mt-10 lg:mt-0 lg:w-[80%]' src={images.findus} alt='finus_img' />
	</div>
</div>