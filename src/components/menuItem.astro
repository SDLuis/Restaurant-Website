---
const { title, price, tags } = Astro.props
---

<div class='flex w-full flex-col my-1'>
	<div class=' flex justify-between items-center'>
		<div class='flex-1'>
			<p class='text-white font-Cormorant font-bold tracking-[0.04em] capitalize leading-2 text-[19px]' style={{ color: '#DCCA87' }}>{title}</p>
		</div>
		<div class=' w-[90px] h-[1px] bg-golden-50 mx-4 ' />
		<div class=' flex justify-end items-end'>
			<p class='text-white font-Cormorant font-bold tracking-[0.04em] capitalize leading-2 text-[19px]'>{price}</p>
		</div>
	</div>

	<div class=' w-full mt-1'>
		<p class='leading-2 font-Opensans font-normal tracking-[0.04em] text-sm capitalize my-8 text-selfgray-50' style={{ color: '#AAAAAA' }}>{tags}</p>
	</div>
</div>